
services:
  # PostgreSQL Database
  postgres:
    image: postgres:15-alpine
    container_name: shopsphere-db
    environment:
      POSTGRES_DB: shopsphere
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    networks:
      - shopsphere-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 10s
      timeout: 5s
      retries: 5

  # Backend API (.NET)
  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    container_name: shopsphere-api
    environment:
      - ASPNETCORE_ENVIRONMENT=Development
      - ASPNETCORE_URLS=http://+:5000
      - ConnectionStrings__DefaultConnection=Host=postgres;Database=shopsphere;Username=postgres;Password=postgres
      - JWT__Secret=${JWT_SECRET}
      - JWT__ExpirationMinutes=${JWT_EXPIRATION_MINUTES}
      - Stripe__SecretKey=${STRIPE_SECRET_KEY}
      - Stripe__PublishableKey=${STRIPE_PUBLISHABLE_KEY}
    ports:
      - "5000:5000"
    depends_on:
      postgres:
        condition: service_healthy
    networks:
      - shopsphere-network
    volumes:

  # Frontend (React)
  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
    container_name: shopsphere-frontend
    environment:
      - REACT_APP_API_URL=http://localhost:5000
      - REACT_APP_STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
    ports:
      - "3000:3000"
    depends_on:
      - backend
    networks:
      - shopsphere-network
    volumes:

  # pgAdmin (optional - pour g√©rer la DB)
  pgadmin:
    image: dpage/pgadmin4:latest
    container_name: shopsphere-pgadmin
    environment:
      PGADMIN_DEFAULT_EMAIL: admin@shopsphere.com
      PGADMIN_DEFAULT_PASSWORD: admin
    ports:
      - "5050:80"
    depends_on:
      - postgres
    networks:
      - shopsphere-network

networks:
  shopsphere-network:
    driver: bridge

volumes:
  postgres_data:
